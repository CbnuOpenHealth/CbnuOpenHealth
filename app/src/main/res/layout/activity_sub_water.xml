<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_set_goal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:orientation="vertical">


   <TextView
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       android:gravity="center"
       android:text="목표 수분 섭취량"
       android:textColor="#0a9184"
       android:textSize="22sp"
       android:textStyle="bold" />

   <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2">


   <EditText
       android:id="@+id/setgoal_edt_goal"
       android:layout_width="150dp"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_alignParentEnd="true"
       android:layout_marginTop="107dp"
       android:layout_marginEnd="130dp"
       android:ems="10"
       android:gravity="center"
       android:inputType="numberDecimal"
       android:maxLength="4"
       android:maxLines="1"
       android:text="2000"
       android:textColor="#0C0909"
       android:textSize="22sp"
       android:textStyle="bold" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBottom="@+id/setgoal_edt_goal"
       android:layout_marginLeft="10dp"
       android:layout_toEndOf="@+id/setgoal_edt_goal"
       android:fontFamily="sans-serif-thin"
       android:gravity="center"
       android:text="ml"
       android:textColor="#3d95c9"
       android:textSize="26sp"
       android:textStyle="bold" />

      <TextView
          android:id="@+id/textView2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_alignParentEnd="true"
          android:layout_marginTop="122dp"
          android:layout_marginEnd="69dp"
          android:text="ml"
          android:textSize="28sp" />

   </RelativeLayout>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="2">

      <Button
          android:id="@+id/setgoal_btn_setgoal"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          android:layout_marginLeft="64dp"
          android:layout_marginTop="108dp"
          android:layout_marginRight="64dp"
          android:background="#3d95c9"
          android:text="확인 완료"
          android:textColor="#ffffff" />

   </RelativeLayout>

   <TextView
       android:layout_width="fill_parent"
       android:layout_height="64dp" />

</LinearLayout>